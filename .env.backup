# ==============================================
# Agent Platform Environment Configuration
# ==============================================
# Copy this file to .env and update with your actual values

# ==============================================
# REQUIRED CONFIGURATION
# ==============================================

# Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/agent_platform

# Environment
NODE_ENV=development

# AI Model API Keys (at least one required for functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server Port and Host
PORT=5005
HOST=0.0.0.0

# Database Password (for Docker deployments)
POSTGRES_PASSWORD=your_secure_postgres_password

# ==============================================
# OPTIONAL AI PROVIDERS
# ==============================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# xAI Grok API  
XAI_API_KEY=xai-your-xai-key-here

# ==============================================
# OPTIONAL AWS SERVICES
# ==============================================
# Required for advanced features like S3 storage, CloudWatch logging, and Bedrock models

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=agent-data
CLOUDWATCH_LOG_GROUP=/agent-platform/execution-logs

# ==============================================
# OPTIONAL AUTHENTICATION & SECURITY
# ==============================================
# Used for JWT token signing and session encryption

JWT_SECRET=your-random-jwt-secret-256-bits-long
SESSION_SECRET=your-random-session-secret-256-bits-long

# ==============================================
# OPTIONAL EXTERNAL INTEGRATIONS
# ==============================================

# Slack Integration (for notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890

# SendGrid Email Service
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_PRICE_ID=price_your-stripe-price-id

# PayPal Payment Processing
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Notion Integration
NOTION_INTEGRATION_SECRET=secret_your-notion-integration-secret
NOTION_PAGE_URL=https://www.notion.so/your-page-url

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_APP_ID=your-firebase-app-id

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Perplexity API
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance metrics collection
ENABLE_METRICS=true

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=1000